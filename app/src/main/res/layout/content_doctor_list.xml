<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.apoorva.hospizone.DoctorList"
    tools:showIn="@layout/app_bar_doctor_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="500">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="480"
                android:id="@+id/editText_search_Doctors"
                android:hint="Search Disease"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:id="@+id/b_search_Doctors"
                android:text="Search"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textAlignment="center"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select From Categories Below"
            android:textAlignment="center"
            android:paddingTop="1dp"
            android:textSize="18dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General Physician"
            android:layout_marginBottom="10dp"
            android:id="@+id/b_genPhy"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Neurologist"
            android:layout_marginBottom="10dp"
            android:id="@+id/b_neuro"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cardiologist"
            android:layout_marginBottom="10dp"
            android:id="@+id/b_Cardio"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gynecologist"
            android:layout_marginBottom="10dp"
            android:id="@+id/b_gynec"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Surgeon"
            android:layout_marginBottom="10dp"
            android:id="@+id/b_surgeon"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dentist"
            android:layout_marginBottom="10dp"
            android:id="@+id/b_dentist"/>



    </LinearLayout>


</ScrollView>
